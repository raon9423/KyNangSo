@model WebAppCore.Models.Account

@{
    ViewData["Title"] = "Create";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="antion antion-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminAccount" asp-action="Index">Danh Sách Tài Khoản</a>
            <span class="breadcrumb-item active">Tạo Mới Quyền Truy Cập</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create New Account</h4>
        <form asp-action="Create" method="post">
            <!-- Add form fields as needed -->
            <div class="form-group">
                <label asp-for="FullName">Full Name:</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <!-- Add other fields as needed -->
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
        <br />
        <a asp-action="Index">Back to List</a>
    </div>
</div>