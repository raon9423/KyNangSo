@model IEnumerable<WebAppCore.Models.Product>
@{
    ViewData["Title"] = "Quản Lý Người Dùng";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminProduct" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Products</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-affix m-v-10">
                            <i class="prefix-icon antion antion-search opactity-40"></i>
                            <input id="keyword" namw="keyword" type="text" class="form-control" placeholder="Search Project" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-affix m-v-10">
                            <select class="custom-select" style="min-width: 180px;">
                                <option selected>Status</option>
                                <option value="all">All</option>
                                <option value="inStock">In Stock </option>
                                <option value="outOfStock">Out of Stock</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminProduct" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Add Product</span></a>

            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>ID</th>
                        <th>ProductName</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>UnitsInStock</th>
                    </tr>
                </thead>
                <tbody id="records_table">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.ProductId
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                        <h6 class="m-b-0 m-l-10">@item.ProductName</h6>
                                    </div>
                                </td>
                                <td>@item.Cat.CatName</td>
                                <td>@item.Price</td>
                                <td>@item.UnitsInStock</td>
                                <td>
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProduct" asp-action="Details" asp-route-id="@item.ProductId">View</a>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProduct" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProduct" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pagedList class="pager-contaier" list="@Model" asp-area="Admin" asp-controller="AdminProduct" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>$(document).ready(function () {
            // Prevent form submission on Enter key press
            $("form").submit(function (event) {
                event.preventDefault();
            });

            // Handle key events in the search input
            $("#keyword").on('input', function () {
                performSearch();
            });

            $("#keyword").keypress(function (event) {
                if (event.which === 13) { // Enter key code
                    performSearch();
                }
            });

            function performSearch() {
                var strkeyword = $('#keyword').val();

                console.log('Search term:', strkeyword);

                $.ajax({
                    url: '/AdminSearch/FindProduct',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        console.log('Search AJAX request successful. Results:', results);

                        $("#loader").hide();
                        $("#records_table").html("");
                        $("#records_table").html(results);
                    },
                    error: function (xhr) {
                        console.error('Search AJAX request error. XHR:', xhr);
                    }
                });
            }
        });</script>
}
