@using X.PagedList.Mvc.Core
@using X.PagedList
@model X.PagedList.PagedList<WebAppCore.ModelViews.CartItem>
@{
    ViewData["Title"] = "PrivacyCart";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<main class="main-content">

    <div class="checkout-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-12">
                    <form action="@Url.Action("PrivacyCart", "ShoppingCart")" method="post">
                        <div class="checkbox-form">
                            <h3>Billing Details</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>FullName<span class="required">*</span></label>
                                        <input placeholder="" type="text">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Phone </label>
                                        <input placeholder="" type="text">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Address <span class="required">*</span></label>
                                        <input placeholder="Street address" type="text">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Thanh toán khi nhận hàng <span class="required">*</span></label>
                                        <input placeholder="Chat Chivalry" type="text">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Thanh toán visa <span class="required">*</span></label>
                                        <input placeholder="Chat Chivalry" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-lg-6 col-12">
                    <div class="your-order">
                        <h3>Your order</h3>
                        @if (Model != null && Model.Count() > 0)
                        {
                            <div class="your-order-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="cart-product-name">Product</th>
                                            <th class="cart-product-total">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr class="cart_item">
                                                    <td class="cart-product-name">
                                                        @item.Product.ProductName<strong class="product-quantity">
                                                            × @item.Amount
                                                        </strong>
                                                    </td>
                                                    <td class="cart-product-total"><span class="amount">@item.TotalMoney.ToString("C")</span></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                    <tfoot>

                                        <tr class="order-total">
                                            <th>Order Total</th>
                                            <td><strong><span class="amount">@Model.Sum(x => x.TotalMoney)</span></strong></td>
                                        </tr>
                                    </tfoot>

                                </table>
                            </div>
                        }
                        <div class="payment-method">
                            <div class="payment-method">
                                <div class="payment-accordion">
                                    <div id="accordion">
                                        <div class="card">
                                            <div class="card-header" id="#payment-1">
                                                <h5 class="panel-title">
                                                    <a href="javascript:void(0)" class="" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true">
                                                        Direct Bank Transfer.
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <p>
                                                        Make your payment directly into our bank account. Please use your Order
                                                        ID as the payment
                                                        reference. Your order won’t be shipped until the funds have cleared in
                                                        our account.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header" id="#payment-2">
                                                <h5 class="panel-title">
                                                    <a href="javascript:void(0)" class="collapsed" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false">
                                                        Cheque Payment
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseTwo" class="collapse" data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <p>
                                                        Make your payment directly into our bank account. Please use your Order
                                                        ID as the payment
                                                        reference. Your order won’t be shipped until the funds have cleared in
                                                        our account.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header" id="#payment-3">
                                                <h5 class="panel-title">
                                                    <a href="javascript:void(0)" class="collapsed" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false">
                                                        PayPal
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseThree" class="collapse" data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <p>
                                                        Make your payment directly into our bank account. Please use your Order
                                                        ID as the payment
                                                        reference. Your order won’t be shipped until the funds have cleared in
                                                        our account.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="order-button-payment">
                                        <input id="placeOrderBtn" type="submit">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section scripts {
    <script>$(document).ready(function () {
            // Xử lý sự kiện khi nút "Place order" được nhấn
            $("#placeOrderBtn").click(function (e) {
                // Ngăn chặn hành vi mặc định của nút để ngăn chặn việc gửi form
                e.preventDefault();

                // Thực hiện các bước đặt hàng ở đây
                // Ví dụ: Hiển thị thông báo đặt hàng thành công
                alert("Đặt hàng thành công!");

                // Xóa sản phẩm sau khi đặt hàng
                $(".your-order-table tbody").empty();
                $(".order-total td .amount").text("$0.00"); // Hoặc cập nhật tổng tiền thành 0 đồng

                // (Tùy chọn) Chuyển hướng người dùng đến một trang cụ thể sau khi đặt hàng
                // window.location.href = "/path/to/success-page";
            });
        });</script>
}
